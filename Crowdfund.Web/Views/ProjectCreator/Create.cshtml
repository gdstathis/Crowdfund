@model Crowdfund.Web.Models.CreateProjectCreatorViewModel;

<form method="post" action="@Url.Action("create", "projectCreator")">

    <div class="form-group">
        <label for="@Html.IdFor(c => c.AddProjectCreatorOptions.Firstname)">Firstname</label>
        @Html.TextBoxFor(c => c.AddProjectCreatorOptions.Firstname, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.AddProjectCreatorOptions.Lastname)">Lastname</label>
        @Html.TextBoxFor(c => c.AddProjectCreatorOptions.Lastname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(c => c.AddProjectCreatorOptions.Phone)">Phone</label>
        @Html.TextBoxFor(c => c.AddProjectCreatorOptions.Phone, new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">
            Insert Valid Phone
        </small>
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(c => c.AddProjectCreatorOptions.Email)">Email</label>
        @Html.TextBoxFor(c => c.AddProjectCreatorOptions.Email,
          new { @class = "form-control js-email", placeholder = "Enter your Email address" })
        <div class="js-validation-email validation-error" style="display: none">
            Invalid Email
        </div>
    </div>
    <button class="btn btn-primary js-submit-projectcreator" >Submit </button>
</form>

<div class="alert alert-success js-create-projectcreator-success" role="alert"
     style="display: none">
</div>
<div class="alert alert-danger js-create-projectcreator-alert" role="alert"
     style="display: none">
</div>



