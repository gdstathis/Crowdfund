            <label for="@Html.IdFor(c => c.AddBackerOptions.Email)">Email</label>
            @Html.TextBoxFor(c => c.AddBackerOptions.Email, new { @class = "form-control" })
            <small id="emailHelp" class="form-text text-muted">
                Insert Valid Email
            </small>
        </div>*@
    
<div class="form-group mx-sm-3 mb-2">
    <label for="@Html.IdFor(c => c.AddBackerOptions.Email)">Email</label>
    @Html.TextBoxFor(c => c.AddBackerOptions.Email,
      new { @class = "form-control js-email", placeholder = "Enter your Email address" })
    <div class="js-validation-email validation-error" style="display: none">
        Invalid Email
    </div>
    </div>
    <button class="btn btn-primary js-submit-backer" type="button" disabled>Submit </button>
</form>

<div class="alert alert-success js-create-customer-success" role="alert"
     style="display: none">
</div>

<div class="form-group">
    <label for="@Html.IdFor(c => c.AddBackerOptions.Donate)">Donate</label>
    @Html.TextBoxFor(c => c.AddBackerOptions.Donate, new { @class = "form-control" })
    <small id="emailHelp" class="form-text text-muted">
        Insert Valid Donate
    </small>
</div>

<button type="submit" class="btn btn-primary">Submit</button>

@if (!string.IsNullOrWhiteSpace(Model?.ErrorText))
{
    <div class="alert alert-danger" role="alert">
        @Model?.ErrorText
    </div>
}
    